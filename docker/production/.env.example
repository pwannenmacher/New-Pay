# Database
DB_HOST=postgres
DB_PORT=5432
DB_USER=newpay_prod
DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD
DB_NAME=newpay_prod
DB_SSLMODE=disable

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
ENV=production
LOG_LEVEL=info

# JWT
# openssl ecparam -genkey -name prime256v1 -noout | openssl ec -outform PEM
JWT_SECRET=CHANGE_ME_GENERATE_NEW_KEY

# SMTP
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=noreply@example.com
SMTP_PASSWORD=CHANGE_ME_SMTP_PASSWORD
SMTP_FROM=noreply@example.com
SMTP_FROM_NAME=NewPay

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW_SECONDS=60

# Vault
VAULT_ENABLED=true
VAULT_ADDR=http://vault:8200
VAULT_TOKEN=CHANGE_ME_AFTER_VAULT_INIT
VAULT_TRANSIT_MOUNT=transit

# Scheduler
SCHEDULER_DRAFT_REMINDERS_ENABLED=true
SCHEDULER_DRAFT_REMINDERS_CRON=0 9 * * *
SCHEDULER_REVIEWER_SUMMARY_ENABLED=true
SCHEDULER_REVIEWER_SUMMARY_CRON=0 9 * * 1

# OAuth (optional)
# OAUTH_AZURE_ENABLED=false
# OAUTH_AZURE_CLIENT_ID=
# OAUTH_AZURE_CLIENT_SECRET=
# OAUTH_AZURE_TENANT_ID=
# OAUTH_AZURE_REDIRECT_URL=https://yourdomain.com/api/v1/auth/azure/callback

# Frontend
VITE_API_URL=https://yourdomain.com


